<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="6dp"
    android:background="@color/grey"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/cart_item_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название товара"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Цена: 5990 KZT"
            android:textColor="@color/text_silver"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cart_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кол-во: 1"
            android:textColor="@color/text_silver"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cart_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Итого: 5990 KZT"
            android:textColor="@color/text_silver"
            android:textSize="14sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cart_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/text_white"
        android:layout_marginStart="10dp" />
</LinearLayout>

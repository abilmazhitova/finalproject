<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/background_black">

    <!-- Аватар -->
    <ImageView
        android:id="@+id/profile_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_default_avatar"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_circle_background" />

    <!-- Кнопка изменения аватара -->
    <TextView
        android:id="@+id/change_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Изменить фото"
        android:textSize="14sp"
        android:textColor="@color/text_silver"
        android:layout_marginBottom="10dp" />

    <!-- Имя пользователя -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя: -"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_white"
        android:layout_marginBottom="5dp" />

    <!-- Email пользователя -->
    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: -"
        android:textSize="16sp"
        android:textColor="@color/text_silver"
        android:layout_marginBottom="5dp" />

    <!-- Телефон пользователя -->
    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Телефон: -"
        android:textSize="16sp"
        android:textColor="@color/text_silver"
        android:layout_marginBottom="5dp" />

    <!-- Дата регистрации -->
    <TextView
        android:id="@+id/user_registration_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата регистрации: -"
        android:textSize="16sp"
        android:textColor="@color/text_silver"
        android:layout_marginBottom="15dp" />

    <!-- Кнопка "Войти" -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Войти"
        android:visibility="gone"
        android:backgroundTint="@color/button_red"
        android:textColor="@color/text_white" />

    <!-- Кнопка "Мои заказы" -->
    <Button
        android:id="@+id/my_orders_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Мои заказы"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/button_gray"
        android:textColor="@color/text_white" />

    <!-- Кнопка "Выйти" -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/button_red"
        android:text="Выйти"
        android:textColor="@color/text_silver" />
</LinearLayout>
